<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".bangdan.BangdanActivity">
    <ImageView
        android:id="@+id/back_bangdanvtivity"
        android:src="@mipmap/myspin_carlink_top_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>
    <android.support.design.widget.TabLayout

        android:layout_centerHorizontal="true"
        android:id="@+id/tablayout_bangdanactivity"
        android:layout_toRightOf="@id/back_bangdanvtivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_bangdanActivity"
        android:layout_below="@id/tablayout_bangdanactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</RelativeLayout>
