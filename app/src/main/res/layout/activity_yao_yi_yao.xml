<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:background="#000"
    tools:context="com.gooch.showtogether.YaoYiYaoActivity">
<LinearLayout
    android:id="@+id/title"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/back_yaoyiyao"
        android:src="@mipmap/myspin_carlink_top_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="摇一摇"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <ImageView
        android:id="@+id/define"
        android:background="@drawable/jd01"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/yaoyiyao_text"
        android:text="摇一摇发现更多精彩"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:layout_below="@id/define"
        android:layout_width="wrap_content"/>
    <LinearLayout
        android:id="@+id/container_yaoyiyao"

        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/yaoyiyao_text"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#d7d7d0"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_yaoyiyao"
            android:src="@mipmap/default_qq_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="helloeeeeeeeeee"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:id="@+id/nickName_yaoyiyao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_alignParentBottom="true"
        android:src="@mipmap/video_yaoyiyao"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/person_yaoyiyao"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
