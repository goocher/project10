<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:background="#fff"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <ImageView
            android:id="@+id/gridView_guanzhu_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>


        <ImageView
            android:id="@+id/gridView_guanzhu_selector"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/gridView_guanzhu_icon"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/gridview_guanzhu_selector"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/gridView_guanzhu_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="12345678"
        android:textSize="15sp"
        android:textStyle="bold"/>
</LinearLayout>