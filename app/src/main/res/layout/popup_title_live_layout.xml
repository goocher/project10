<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#4b4b49"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textView_siliao_live"
        android:text="私聊"
        android:textColor="#fff"

        android:drawableLeft="@android:drawable/ic_popup_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@mipmap/moneny"
        android:id="@+id/icon_popTitle"
       android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">
            <TextView
                android:id="@+id/nickName_live_title"
                android:text="hello"
                android:textColor="#fff"

                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <TextView

            android:text="2"
            android:id="@+id/star_live_title"
            android:drawableLeft="@mipmap/star"
            android:background="#80c9f4"
            android:layout_marginLeft="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayout"/>


    </RelativeLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:id="@+id/guanzhuzhi_live_title"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="关注：17"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="#fff"
            android:id="@+id/fuhaozhi_live_title"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="富豪值：200"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:id="@+id/fensizhi_live_title"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="粉丝：17"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="#fff"
            android:id="@+id/meilizhi_live_title"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="魅力值：200"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:id="@+id/guanzhu_live_title"
        android:text="关注"
        android:background="#ff0"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>